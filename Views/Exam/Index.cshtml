@model List<examCreator.Models.Exam>
<div class="container">
<table class="table table-bordered">
    <thead >
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>Tarih</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @for(int i=0;i<@Model.Count;i++)
        {
            <tr>
                <td>@(i+1)</td>
                <td><a asp-action="Get" asp-route-Id="@Model[i].ExamId">@Model[i].Title</a></td>
                <td>@Model[i].CreatedDate.ToShortDateString()</td>
                <td><a asp-action="Delete" asp-route-Id="@Model[i].ExamId">Sil</a></td>
            </tr>
        }
    </tbody>
</table>
</div>